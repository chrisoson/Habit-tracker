@using Ididit.Data
@using Ididit.Data.Models
@using Ididit.Services

@inject PriorityService PriorityService
@inject AppData AppData

@if (PriorityService.Priorities is not null && Model is not null)
{
    <div class="input-group">
        <span class="input-group-text">Priority</span>
        <InputSelect class="form-select" @bind-Value="Model.Priority">
            @foreach (Priority priority in Enum.GetValues<Priority>())
            {
                <option value="@priority">@AppData.GetPriorityTitle(priority)</option>
            }
        </InputSelect>
    </div>
}

@code {
    [EditorRequired]
    [Parameter]
    public Model? Model { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await PriorityService.Initialize();
    }
}
