@page "/tasks/add"

@using Ididit.Data.Models
@using Ididit.Services

@inject TaskService TaskService

<PageTitle>TasksAdd</PageTitle>

@if (TaskService.NewTask is not null)
{
    <div class="bg-body-tertiary my-1 p-1">
        <div>
            <InputTextImmediate @bind-Value="TaskService.NewTask.Title" placeholder="Title" />

            <button @onclick="AddTask" disabled="@string.IsNullOrWhiteSpace(TaskService.NewTask.Title)"><i class="bi bi-plus-square"></i></button>
        </div>

        <CategoryComponent Model="TaskService.NewTask" />

        <PriorityComponent Model="TaskService.NewTask" />

        <div>
            <InputDate Type="InputDateType.DateTimeLocal" @bind-Value="TaskService.NewTask.Date" />
        </div>
    </div>
}

@code {
    [Inject]
    private NavigationManager? NavigationManager { get; set; }

    private async Task AddTask()
    {
        await TaskService.AddTask();

        NavigationManager?.NavigateTo("/tasks");
    }
}