@page "/notes/{Id:long}/update"

@using Ididit.Data.Models
@using Ididit.Services

@inject NoteService NoteService

<h3>NotesUpdate</h3>

@if (NoteService.EditNote is not null)
{
    <div>
        <label for="titleInput">Title:</label>
        <input id="titleInput" type="text" @bind="NoteService.EditNote.Title" />

        <button @onclick="NoteService.UpdateNote">Update Note</button>
    </div>
}

@code {
    [Parameter]
    public long? Id { get; set; }

    protected override void OnParametersSet()
    {
        NoteService.EditNote = NoteService.Notes?.FirstOrDefault(n => n.Id == Id);
    }
}