@page "/tasks/{Id:long}/update"

@using Ididit.Data.Models
@using Ididit.Services

@inject TaskService TaskService

<h3>TasksUpdate</h3>

@if (TaskService.EditTask is not null)
{
    <div>
        <label for="titleInput">Title:</label>
        <input id="titleInput" type="text" @bind="TaskService.EditTask.Title" />

        <button @onclick="TaskService.UpdateTask">Update Task</button>
    </div>
}

@code {
    [Parameter]
    public long? Id { get; set; }

    protected override void OnParametersSet()
    {
        TaskService.EditTask = TaskService.Tasks?.FirstOrDefault(t => t.Id == Id);
    }
}