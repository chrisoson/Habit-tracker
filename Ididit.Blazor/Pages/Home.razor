@page "/"

@using Ididit.Data

<PageTitle>ididit!</PageTitle>

@if (_showColumns)
{
    <Notes IsEmbedded />
    <Tasks IsEmbedded />
    <Habits IsEmbedded />
}
else
{
    <div class="flex-grow-1 w-auto mh-100 overflow-auto px-0 px-md-1">
        <Notes IsEmbedded />
        <Tasks IsEmbedded />
        <Habits IsEmbedded />
    </div>
}

@code {
    [CascadingParameter(Name = "WindowDimensions")]
    public Dimensions? WindowDimensions { get; set; }

    bool _showColumns => WindowDimensions?.Width < 768 || WindowDimensions?.Width > 1470;
}