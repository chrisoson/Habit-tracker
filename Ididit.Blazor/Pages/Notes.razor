@page "/notes"
@page "/notes/{Id:long}"

@using Ididit.Data.Models
@using Ididit.Services

@inject NoteService NoteService

<PageTitle>Notes</PageTitle>

<h1>Notes</h1>

@if (NoteService.Notes is null || NoteService.EditNote is null)
{
    <p>Loading...</p>
}
else
{
    <p>Notes: @NoteService.Notes.Count</p>

    foreach (NoteModel note in NoteService.Notes)
    {
        if (note.Id == Id)
        {
            <p><a href="/notes">@note.Title</a></p>

            <button @onclick="() => NoteService.DeleteNote(note.Id)">Delete Note</button>

            <p>@note.CreatedAt</p>
            <p>@note.UpdatedAt</p>
            <p>@note.Priority</p>
        }
        else
        {
            <p><a href="/notes/@note.Id">@note.Title</a></p>
        }
    }

    <div>
        <label for="titleInput">Title:</label>
        <input id="titleInput" type="text" @bind="NoteService.EditNote.Title" />

        <button @onclick="NoteService.AddNote">Add Note</button>
    </div>
}

@code {
    [Parameter]
    public long? Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await NoteService.Initialize();
    }
}
